<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Safety_app.Views.TabbedPages.TabbedPage2"
            xmlns:prescription="clr-namespace:Safety_app.Views.MainViews.Prescriptions"
            xmlns:Schedules="clr-namespace:Safety_app.Views.MainViews.Schedules"
            xmlns:Home="clr-namespace:Safety_app.Views.MainViews.Home">
    <TabbedPage.Resources>
        <ResourceDictionary>
            <ImageSource x:Key="homeImg">home.png</ImageSource>
            <ImageSource x:Key="scheduleImg">timer.png</ImageSource>
            <ImageSource x:Key="prescriptionImg">prescription.png</ImageSource>
        </ResourceDictionary>
    </TabbedPage.Resources>
    
    <Home:index Title="Home" IconImageSource="{StaticResource homeImg}"></Home:index>
    <prescription:index Title="Prescription" IconImageSource="{StaticResource prescriptionImg}" IsVisible="True"></prescription:index>
    <Schedules:index Title="Schedules" IconImageSource="{StaticResource scheduleImg}"></Schedules:index>
 
</TabbedPage>