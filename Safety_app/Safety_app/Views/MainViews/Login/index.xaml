<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Safety_app.Views.MainViews.Login.index">
    <ContentPage.Content>
        <StackLayout>
       
            <Image Source="medic.png" WidthRequest="200" Margin="50" VerticalOptions="Center" Opacity="0.5"/>
            <Entry IsPassword="True" x:Name="password" Margin="50,10,50,0" Placeholder="PIN CODE"></Entry>
            <Button Text="Login" Margin="100,10,100,0"/>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>