<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:local="clr-namespace:Safety_app.ViewModels.Drugs"  
             x:Class="Safety_app.Views.MainViews.Drugs.index">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Select Drugs"></Label>
            <Picker x:Name="DrugPicker"></Picker>
            <ListView ItemsSource="{Binding lstDrugs}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label  Text="{Binding Path=name}"></Label>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button ImageSource="add.png" WidthRequest="70" HeightRequest="70" HorizontalOptions="End" Margin="10" BorderRadius="30" 
                     Command="{Binding Source={RelativeSource AncestorType={x:Type local:indexViewModel}}, Path=addnewDrug}"		
                    ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>